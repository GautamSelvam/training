<?xml version="1.0"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route url="/V1/tracking-product/api/save" method="POST">
        <service class="Products\Tracking\Api\TrackingInterface" method="save"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>

    <route url="/V1/tracking-product/api/getData/:start/:end" method="GET">
        <service class="Products\Tracking\Api\TrackingInterface" method="getApiData"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    
    <route url="/V1/tracking-product/api/getData" method="GET">
        <service class="Products\Tracking\Api\TrackingInterface" method="getApiData"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>

    <route url="/V1/tracking-product/api/updateData" method="POST">
        <service class="Products\Tracking\Api\TrackingInterface" method="update"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>

    <route url="/V1/tracking-product/api/getById/:id" method="GET">
        <service class="Products\Tracking\Api\TrackingInterface" method="getById"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>

    <route url="/V1/tracking-product/api/delete/:id" method="POST">
        <service class="Products\Tracking\Api\TrackingInterface" method="delete"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
</routes>

